{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testRegex": ".integration.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleDirectories": ["node_modules", "src"],
  "rootDir": "./..",
  "roots": ["src"],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  }
}
